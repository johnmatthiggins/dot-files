# set vim bindings
set -o vi

# PROMPT SECTION
pwd_tilde() {
    if [[ "${PWD#$HOME}" != "$PWD" ]] then
        echo "~${PWD#$HOME}"
    else
        echo "$PWD"
    fi
}

PS1="[$(printf '\e[35m')$(whoami)@$(hostname)$(printf '\e[0m') $(printf '\e[34m')$(pwd_tilde)$(printf '\e[0m')]$ "

# $PATH SETTINGS
export PATH="$PATH:/opt/homebrew/bin/:$HOME/dotnet"

export MAN_POSIXLY_CORRECT=1

# ALIASES
alias la='ls -a'
alias ll='ls -l'
alias l='ls'
alias dn='dotnet'
