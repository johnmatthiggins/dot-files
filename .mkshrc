
# set vim bindings
set -o vi

# PROMPT SECTION
pwd_tilde() {
    if [[ "${PWD#$HOME}" != "$PWD" ]] then
        echo "~${PWD#$HOME}"
    else
        echo "$PWD"
    fi
}

PS1='[$(whoami)@$(hostname) $(pwd_tilde)]$ '

# $PATH SETTINGS
export PATH="$PATH:/opt/homebrew/bin/"

# ALIASES
alias la='ls -a'
alias ll='ls -l'
alias l='ls'
