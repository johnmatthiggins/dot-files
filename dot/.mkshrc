# set vim bindings
set -o vi

# PROMPT SECTION
pwd_tilde() {
    if [[ "${PWD#$HOME}" != "$PWD" ]] then
        echo "~${PWD#$HOME}"
    else
        echo "$PWD"
    fi
}

if [[ "$(uname)" == "Darwin" ]] then
    PS1="[$(whoami)@$(hostname) "'$(pwd_tilde)'"]$ "
else
    PS1="[$(printf '\e[32m')$(whoami)@$(hostname)$(printf '\e[0m') $(printf '\e[34m')"'$(pwd_tilde)'"$(printf '\e[0m')]$ "
fi

# $PATH SETTINGS
export PATH="$PATH:/opt/homebrew/bin/:$HOME/dotnet:$HOME/bin"
export MAN_POSIXLY_CORRECT=1

# ALIASES
alias la='ls -a'
alias ll='ls -l'
alias l='ls'
alias dn='dotnet'
alias zyp='sudo zypper'
alias open='xdg-open'

if [[ -f ~/.env ]]; then
    source ~/.env
fi
